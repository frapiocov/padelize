<!DOCTYPE html>
<html lang="it">

<head>
  <meta charset="UTF-8">
  <title>Turno <%= turno %></title>
  <!-- Includi Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>

<body class="p-4 bg-light text-dark">
  <div class="container mt-5">
    <h1 class="mb-4 text-center">Partite <span class="bg-primary text-light px-1 rounded">turno <%= turno %></span> ðŸŽ¾</h1>

    <!-- Form per inviare i risultati -->
    <form action="/risultati" method="POST">
      <div="mb-3">
        <% for (let campo in partite) { %>
          <div class="card mb-3">
            <div class="card-header text-white bg-primary">
              <h5 class="mb-0">Match campo <%= campo.toUpperCase() %></h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <div class="mb-2">
                  <%= partite[campo].coppie[0][0].nome %> & <%= partite[campo].coppie[0][1].nome %> <span>VS</span> <%= partite[campo].coppie[1][0].nome %> & <%= partite[campo].coppie[1][1].nome %>
                </div>
                <div class="d-flex mb-2 row">
                  <div class="col">
                    <input type="number" name="[<%= partite[campo].punteggio[0] %>]" class="form-control me-2" placeholder="Punteggio prima coppia" min="0" required>
                  </div>
                  <div class="col">
                    <input type="number" name="[<%= partite[campo].punteggio[1] %>]" class="form-control me-2" placeholder="Punteggio seconda coppia" min="0" required>
                  </div>

                </div>
              </li>
            </ul>
          </div>
        <% } %>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary btn-md mt-3">Salva Risultati</button>
      </div>
    </form>
  </div>

  <!-- Includi Bootstrap JS (opzionale) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>