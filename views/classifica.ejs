<!DOCTYPE html>
<html>
	<head>
		<title>Padelize | Classifica</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
	</head>
	<body class="p-4">
		<h3>Classifica torneo</h3>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Posizione</th>
					<th scope="col">Nome</th>
					<th scope="col">Livello</th>
					<th scope="col">Punti</th>
				</tr>
			</thead>
			<tbody>
				<% classifica.forEach((giocatore, index) => { %>
				<tr>
					<td><%= index + 1 %></td>
					<td><%= giocatore.nome %></td>
					<td><%= giocatore.livello %></td>
					<td><%= giocatore.punti %></td>
				</tr>
				<% }); %>
			</tbody>
		</table>
	</body>
</html>
